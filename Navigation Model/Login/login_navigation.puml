@startuml login_navigation

skinparam shadow false
skinparam packageStyle rectangle
skinparam roundCorner 15
skinparam class {
  BackgroundColor #FEFECE
  BorderColor #A80036
  ArrowColor #A80036
}

package "Navigation Login" {
  class "Home" as Home <<navigationClass>> {
    {tag=isHome}
  }
  
  class "Menu" as Menu <<menu>>
  class "LoginForm" as LoginForm <<navigationClass>>
  class "Dashboard" as Dashboard <<navigationClass>>
  
  class "RecoverPassword" as RecPass <<navigationClass>>
  class "LoginError" as LoginError <<navigationClass>>

  ' Flujo Principal
  Home --> Menu : <<navigationLink>>
  Menu --> LoginForm : <<navigationLink>>
  LoginForm --> Dashboard : <<navigationLink>>
  
  ' Flujos de Error y RecuperaciÃ³n
  LoginForm --> LoginError : <<navigationLink>> (Error)
  LoginError --> LoginForm : <<navigationLink>> (Reintentar)
  
  Menu --> RecPass : <<navigationLink>>
  LoginForm --> RecPass : <<navigationLink>>
  RecPass --> LoginForm : <<navigationLink>> (Cancelar/Volver)
}
@enduml
